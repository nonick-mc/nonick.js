{
  "name": "@repo/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate",
    "db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
    "db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "catalog:"
  },
  "devDependencies": {
    "discord-api-types": "catalog:",
    "dotenv": "^16.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}
