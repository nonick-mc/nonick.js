{
  "name": "nonick.js",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:bot": "turbo run build --filter=bot",
    "build:dashboard": "turbo run build --filter=dashboard",
    "build:web": "turbo run build --filter=web",
    "db:generate": "pnpm --filter=@repo/database db:generate",
    "db:migrate": "pnpm --filter=@repo/database db:migrate",
    "db:studio": "pnpm --filter=@repo/database db:studio"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/node": "^22.15.30",
    "turbo": "^2.5.4"
  }
}
